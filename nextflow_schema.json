{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/./master/nextflow_schema.json",
    "title": "Download CRAMs from iRODS to lustre",
    "description": "",
    "type": "object",
    "definitions": {
        "input_output_options": {
            "title": "Input/output options",
            "type": "object",
            "fa_icon": "fas fa-terminal",
            "description": "Define where the pipeline should find input data and save output data.",
            "required": [
                "run_mode",
                "outdir"
            ],
            "properties": {
                "run_mode": {
                    "type": "string",
                    "default": "csv_samples_id",
                    "description": "Choose between csv_samples_id(file of iRODS paths),study_id(one or more iRODS study_ids",
                    "fa_icon": "fas fa-angle-double-right"
                },
                "samples_to_process": {
                    "description": "Number of files to process (-1 means, all of them)",
                    "type": "integer",
                    "default": "1",
                    "fa_icon": "fas fa-angle-double-right"
                },
                "run_imeta_study": {
                    "type": "string",                    
                    "description": "true = run module, false = ignore",
                    "default": "false",
                    "fa_icon": "fas fa-angle-double-right"
                },
                "input_studies": {
                    "type": "integer",
                    "description": "one or more study_ids to get CRAM files",
                    "default": ["1891"],
                    "fa_icon": "fas fa-angle-double-right"
                },
                "input_samples_csv": {
                    "type": "string",
                    "description": "TSV with samples and iRODS path",
                    "default": "${projectDir}/example_runtime/sample.tsv",
                    "fa_icon": "fas fa-code"
                },
                "input_samples_csv_column": {
                    "type": "string",
                    "description": "column label with sample name",
                    "default": "sample",
                    "fa_icon": "fas fa-code"
                },

                "outdir": {
                    "type": "string",
                    "format": "directory-path",
                    "description": "The output directory where the results will be saved. You have to use absolute paths to storage on Cloud infrastructure.",
                    "default": "${projectDir}/outdir",
                    "fa_icon": "fas fa-folder-open"
                },
                "cram_output_dir": {
                    "type": "string",
                    "format": "directory-path",
                    "description": "The directory where the CRAM files will be copied, from the work directory. You have to use absolute paths ",
                    "default": "${projectDir}/outdir/crams",
                    "fa_icon": "fas fa-folder-open"
                },
                "reportdir": {
                    "type": "string",
                    "format": "directory-path",
                    "description": "The directory where the pipeline reports will be saved. You have to use absolute paths",
                    "default": "${projectDir}/outdir",
                    "fa_icon": "fas fa-folder-open"
                },

                "singularity_use_pre_cached_images": {
                    "type": "boolean",
                    "description": "Decide to use or not cached images",
                    "default": false
                }
            }
        }
    }
}
